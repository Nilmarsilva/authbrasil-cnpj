# Backend Production Environment Variables

# Environment
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING
JWT_SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# Database (internal docker network)
DATABASE_URL=postgresql://authbrasil_user:STRONG_PASSWORD@postgres:5432/authbrasil_cnpj
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis (internal docker network)
REDIS_URL=redis://:REDIS_PASSWORD@redis:6379/0

# API Configuration
API_VERSION=v1
CORS_ORIGINS=https://app.authbrasil.app.br,https://authbrasil.com.br

# Stripe (production keys)
STRIPE_SECRET_KEY=sk_live_your_production_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (SendGrid or AWS SES)
EMAIL_FROM=noreply@authbrasil.com.br
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# ETL
RECEITA_BASE_URL=https://arquivos.receitafederal.gov.br/dados/cnpj/dados_abertos_cnpj/
ETL_CHUNK_SIZE=100000
ETL_TEMP_DIR=/tmp/etl_receita

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_LOGIN_ATTEMPTS=5

# Monitoring (opcional)
SENTRY_DSN=
LOG_LEVEL=INFO
